{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@now/next"
    },
    {
      "src": "*.py",
      "use": "@liudonghua123/now-flask" ,
      "config": { "maxLambdaSize": "30mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "run.py"
    },
    {
      "src": "/_next(.*)",
      "dest": "frontend/_next$1"
    },
    {
      "src": "(.*)",
      "dest": "frontend$1"
    }
  ]
}
